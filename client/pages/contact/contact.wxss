/* pages/contact/contact.wxss */

.top-user {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* color: #777; *//* border: 1rpx solid #ddd; */
  background-color: #6aa84f;
  color: #fff;
}

.top-user .user-icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
}

.row-item {
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  color: #888;
  box-sizing: border-box;
  line-height: 100rpx;
  /* margin: 10rpx 0; */
}

.row-item:active {
  background-color: #eee;
}

.row-item .row-btn{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 10rpx 60rpx;
  justify-content: space-between;
  align-items: center;
  background-color: transparent;
  border: 0;
  color: #777;
}

.row-item .row-btn::after{  
  border: 0;  
}  

.row-item .icon-left {
  width: 32rpx;
  height: 32rpx;
}

.row-item .icon-right {
  width: 32rpx;
  height: 32rpx;
}

.row-item .item-left {
  /* width: 200rpx; */
}

.row-item .item-content {
  flex: 1;
  text-align: center;
}

.code-item {
  text-align: center;
  border: 0;
  margin-top: 30rpx;
}

.center-code {
  margin: 150rpx auto;
}
