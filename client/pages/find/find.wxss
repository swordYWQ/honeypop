.article-list{
  width: 700rpx;
  margin: 10rpx auto;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}

.article-list .article-item{
  width: 100%;
  height: 300rpx;
  border: 1px solid #ddd; 
  background-color: #6aa84f;
  color: #fff;
  font-size: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}